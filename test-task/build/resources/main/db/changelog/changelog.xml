<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="Artem" id="drop-table" runAlways="true">
        <dropTable tableName="counter" schemaName="test_task_counter" cascadeConstraints="true"/>
    </changeSet>

    <changeSet author="Artem" id="create-table" runAlways="true">
        <createTable schemaName="test_task_counter" tableName="counter">
            <column type="INT" name="id">
                <constraints primaryKey="true"/>
            </column>
            <column type="INT" name="value"/>
        </createTable>
    </changeSet>

    <changeSet  author="Artem"  id="insert-counter" runAlways="true">
        <insert dbms="mysql"
                 schemaName="test_task_counter"
                 tableName="counter">
            <column  name="id"  value="1"/>
            <column  name="value"  value="0"/>
        </insert>
    </changeSet>
</databaseChangeLog>
